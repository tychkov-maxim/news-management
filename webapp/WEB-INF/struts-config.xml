<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
    <form-beans>
        <form-bean name="helloWorldForm" type="com.epam.tm.news.HelloWorldForm"/>
    </form-beans>

    <action-mappings>
        <action path="/hello" type="com.epam.tm.news.HelloWorldAction" name="helloWorldForm">
        <forward name="success" path="/WEB-INF/view/hello.jsp"/>
        </action>
    </action-mappings>
</struts-config>